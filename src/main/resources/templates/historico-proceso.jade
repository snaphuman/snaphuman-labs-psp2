doctype html
html
  head
    link(rel="stylesheet", type="text/css", href="/css/pure-min.css")
    link(rel="stylesheet", type="text/css", href="/css/main.css")
    script(src="/js/jquery.min.js")
    script(src="/js/main.js")
  body
    h1 #{titulo}
    form.pure-form.pure-form-aligned(method="post", action="/historico-proceso/calcular")
      fieldset
        .pure-control-group
          label(for="datos") Datos
          textarea#p(type="text", name="datos", placeholder="datos")
        .pure-controls#historico
          button.pure-button.pure-button-primary(type="submit") Calcular
          p
            a#test1.pure-button(href="#") Test 1
          p
            a#test2.pure-button(href="#") Test 2
          p
            a#test3.pure-button(href="#") Test 3
